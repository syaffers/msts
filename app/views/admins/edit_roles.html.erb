<div class="row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-6">
				<h2>Edit Admin Role for <%= @admin.email %></h2>
			</div>
			<div class="col-xs-6">
				<%= link_to '&larr; Cancel'.html_safe, admins_path, class: "btn btn-danger pull-right header-component" %>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<%= form_for(@admin, :url => { :action => :update_roles }) do |f| %>
				<% if @admin.errors.any? %>
					<div id="error_explanation" class="alert alert-danger">
						<p><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</p>

						<ul>
						<% @admin.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>

				<div class="row">
					<div class="col-xs-12">
						<h3>Role</h3>
					</div>
					<div class="col-xs-12">
						<%= f.radio_button :roles_mask, "1" %>
						<%= f.label :roles_mask, "Super Admin", :value => "1" %>
					</div>
					<div class="col-xs-12">
						<%= f.radio_button :roles_mask, "2" %>
						<%= f.label :roles_mask, "Admin", :value => "2" %>
					</div>
					<div class="col-xs-12">
						<%= f.radio_button :roles_mask, "4" %>
						<%= f.label :roles_mask, "Gatekeeper", :value => "4" %>
					</div>
				</div>

				<%= f.submit "Submit", class: "btn btn-primary header-component" %>
				<% end %>
			</div>
		</div>


	</div>
</div>