<div class="row">
  <div class="col-xs-12">
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <p><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</p>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-2">
          <div class="form-group">
            <%= f.label :starting_serial, "Starting Serial Number" %>
            <%= f.text_field :starting_serial, class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-2">
          <div class="form-group">
            <%= f.label :ending_serial, "Ending Serial Number" %>
            <%= f.text_field :ending_serial, class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-2">
          <div class="form-group">
            <%= f.label :member_price %>
            <%= f.text_field :member_price, class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-2">
          <div class="form-group">
            <%= f.label :non_member_price %>
            <%= f.text_field :non_member_price, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
